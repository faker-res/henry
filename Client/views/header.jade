                    th(style='width:1%')
                    th(style='width:1%')
            tbody
                tr(ng-repeat="(i,mail) in adminMail | orderBy:'-createTime'")
                    td(ng-class="{faint: mail.hasBeenRead}") {{timeReformat(mail.createTime)}}
                    td(ng-class="{faint: mail.hasBeenRead}") {{mail.senderName}}
