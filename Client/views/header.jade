            thead
                tr
                    th(style='width:10%') {{'TIME' | translate}}
                    th(style='width:15%') {{'SENDER' | translate}}
                    th(style='width:25%') {{'TITLE' | translate}}
                    th(style='width:45%') {{'CONTENT' | translate}}
