                            tbody
                                td {{"\{\{creditAmount\}\}"}}
                                td 免费金额
                            tbody
                                td {{"\{\{providerGroup\}\}"}}
                                td 大厅
                            tbody
                                td {{"\{\{requiredConsumption\}\}"}}
                                td 流水需求
                        br
