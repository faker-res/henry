.row
    .col-md-12
        .well.col-xs-12
            .search-filters-item
                label {{'PRODUCT_NAME' | translate}}
                select.form-control(ng-model='vm.filterTrashClassificationPlatform', ng-options='v._id as v.name$ for v in vm.allPlatformData', ng-change='vm.initTrashClassificationDecompositionList(vm.filterTrashClassificationPlatform)')
.text-center(ng-if="!vm.filterTrashClassificationPlatform")
    label.text-danger {{"NO_PLATFORM_MESSAGE" | translate}}

.panel.panel-primary(ng-if='vm.filterTrashClassificationPlatform')
    .panel-body.common-left-panel-body.leftPanel-vlist
        #trashClassificationDecompositionListCategory.panel-group
            .panel.panel-default
                .panel-heading.panel-heading-sm(data-toggle='collapse', data-parent="#trashClassificationDecompositionListCategory", href='#trashClassification')
                    h4.panel-title
                        label.text-success {{'Trash Classification（Export）' | translate}}
                #trashClassification.panel-collapse.collapse.in
                    .panel-body
                        div
                            li.list-group-item(ng-repeat='(i,v) in vm.trashClassificationList', ng-click='vm.getTrashClassificationDetail(v)')
                                text {{v.name | translate}}
                                .badge.pull-right(style='background-color:red; color:white', ng-show='v.size > 0') {{v.size}}
                            li.list-group-item.text-danger(ng-if='vm.trashClassificationList.length==0') {{"NONE" | translate}} {{"Trash Classification" | translate}}

            .panel.panel-default
                .panel-heading.panel-heading-sm(data-toggle='collapse', data-parent="#trashClassificationDecompositionListCategory", href='#decompositionList')
                    h4.panel-title
                        label.text-success {{'New Phone List（Import）' | translate}}
                #decompositionList.panel-collapse.collapse
                    .panel-body
                        div
                            li.list-group-item(ng-if='vm.decompositionListCount!=0' ng-click='vm.getDecomposedDetail();vm.multiDecomposedNewPhoneSelected=[];')
                                text {{'New Phone' | translate}}
                                .badge.pull-right(style='background-color:red; color:white', ng-show='vm.decompositionListCount > 0') {{vm.decompositionListCount}}
                            li.list-group-item.text-danger(ng-if='vm.decompositionListCount==0') {{"NONE" | translate}} {{"New Phone List" | translate}}
                            li.list-group-item(ng-click='vm.getFeedbackPhoneTradeDetail();vm.multiDecomposedNewPhoneSelected=[];', title= "{{'OTHER_DEPARTMENT_TS_LIST' | translate}}")
                                text {{'OTHER_DEPARTMENT_TS_LIST' | translate}}
                                .badge.pull-right(style='background-color:red; color:white', ng-show='vm.feedbackPhoneListCount > 0') {{vm.feedbackPhoneListCount}}