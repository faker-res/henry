                    div
                        form
                            input(type='file', name='file' on-read-file='vm.uploadPhoneFileTXT($fileContent); vm.showContentTXT($fileContent)', ng-if='!vm.resetInputTXT', ng-click="vm.phoneNumTXTResult=false;")
