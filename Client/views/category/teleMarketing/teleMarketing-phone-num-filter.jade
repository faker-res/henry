        .col-md-6
            .panel.panel-primary
                .panel-heading
                    .fa.fa-file-text.margin-right-5
                    label {{"SUPPORTED_FILE_FORMAT" | translate}}:
                    |  .txt
                .panel-body
                    .alert.alert-info.alert-dismissable
                        a.close(href='#', data-dismiss='alert', aria-label='close') ×
