                                    i.fa.fa-refresh.symbol
                                    text {{"RESET_TXT" | translate}}
                                button.btn.btn-primary.btn-space(ng-click="vm.phoneNumTXTResult=true;")
                                    i.fa.fa-check.symbol
                                    text {{"SUBMIT" | translate}}
                    // display result
                    div(ng-if="vm.phoneNumTXTResult")
                        br
                        label {{"RESULT" | translate}}:
                        .well
                            label {{"DUPLICATE_PHONE" | translate}}:
                            | &nbsp;
                            label.colorRed ({{vm.samePhoneTotalTXT}})
                            p {{vm.samePhoneTXT}}
                        .well
                            label {{"NON_DUPLICATE_PHONE" | translate}}:
