include ./partner-setting-platform-select
div.padding-top-5(ng-if="vm.platformInSetting && checkViewPermission('Partner', 'Config', 'commissionBillboard')")
    div.padding-top-5
        text.inline-block.margin-right-5 {{'TYPE' | translate}}
        select.inline-block( ng-model="vm.commissionBillboardPeriod" ng-change="vm.changePeriod(true)")
            option(ng-repeat='(i,j) in vm.constPartnerBillBoardPeriod', value= '{{j}}') {{i | translate}}
        table.common-table#partnerCBillBoardTable.display(style="width:inherit;min-width:100%;overflow-x: scroll")
        .col-md-12#partnerCBillBoardTablePage

    div.padding-top-5em
        strong {{'GenerateFakeRecord' | translate}}
        table.simple-table(style='width:auto;min-width:99.9%')
            thead
                tr
                    th {{'插入账号（前缀）' | translate}}
                    th {{'假账号字数区间（含前缀）' | translate}}
                    th {{'假账号组成模式' | translate}}
                    th {{'初始佣金区间' | translate}}
                    th {{'账号产生数量' | translate}}
                    th {{'是否开启假账号佣金浮动' | translate}}
                    th {{'佣金起伏单位' | translate}}
                    th {{'佣金起伏区间（可为负数）' | translate}}
                    th {{'变动周期 ' | translate}}
            tbody
                tr
                    td
                        input(ng-model='vm.placeHolder1' size=5)
                    td
                        input(type='number' min='0' ng-model='vm.placeHolder2' max=25)
                    td
                        input(type="checkbox" id="fakeCommUseAlphabet")
                        text 字母
                        br
                        input(type="checkbox" id="fakeCommUseDigit")
                        text 数字
                    td
                        input.width-5em(type="number" ng-model='vm.placeHolder3')
                        br
                        text <
                        br
                        input.width-5em(type='number' ng-model='vm.placeHolder4')
                    td
                        input(type='number' ng-model='vm.placeHolder5' step="1" min=1 max=999)
                    td
                        input(type="checkbox" id="fakeCommUsePeriodicChanges")
                    td
                        select.form-control(ng-model='vm.placeHolder6')
                            option(value='0') {{"ratio"|translate}}
                            option(value='1') {{"value"|translate}}
                    td
                        input.width-5em(type="number" ng-model='vm.placeHolder7')
                        br
                        text <
                        br
                        input.width-5em(type='number' ng-model='vm.placeHolder8')
                    td
                        input(type="checkbox" id="fakeCommChangeOnMonday")
                        text 一
                        br
                        input(type="checkbox" id="fakeCommChangeOnTuesday")
                        text 二
                        br
                        input(type="checkbox" id="fakeCommChangeOnWednesday")
                        text 三
                        br
                        input(type="checkbox" id="fakeCommChangeOnThursday")
                        text 四
                        br
                        input(type="checkbox" id="fakeCommChangeOnFriday")
                        text 五
                        br
                        input(type="checkbox" id="fakeCommChangeOnSaturday")
                        text 六
                        br
                        input(type="checkbox" id="fakeCommChangeOnSunday")
                        text 日

    div.padding-top-5em
        input(type="checkbox" id="vm.onlyFakeRecord")
        text 仅显示假账号
        table.common-table#partnerFakeCBillBoardTable.display(style="width:inherit;min-width:100%;overflow-x: scroll")
        .col-md-12#partnerFakeCBillBoardTablePage

#modalUpdateFakeCommRecord.modal.fade(tabindex='-1', role='dialog', data-backdrop='static', keyboard=false, aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog(style='width:40%;')
        .modal-content
            .modal-header
                a.fa.fa-times.close(type='button', data-dismiss='modal')
                h4.modal-title {{"EDIT_BB_COMMISSION_RANK" | translate}} {{vm.updatingFakeRecord}}


            .modal-body
                text {{"partnerName" | translate}}
                input.form-control(ng-model="vm.placeholder10")
                text {{"currentCommission" | translate}}
                input.form-control(type="number" ng-model="vm.placeholder11")
            .modal-footer
                button.btn.btn-success.common-button(ng-disabled="!vm.placeholder10")
                    i.fa.fa-check
                    text {{"CONFIRM" | translate}}
                button.btn.btn-danger.common-button(data-dismiss='modal')
                    i.fa.fa-ban
                    text {{"CANCEL" | translate}}