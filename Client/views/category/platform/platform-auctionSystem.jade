                            option(value='=') {{'='}}
                            option(value='<=') {{'<='}}
                            option(value='range') {{'range' | translate}}
                        div(style="width:8px;display:inline-block")
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.playerValueFormal" style="width:80px;display:inline-block")
                        div.text-center(style="width:15px;display:inline-block" ng-if="vm.auctionSystemProduct.playerValueOperator === 'range'") -
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.playerValueLatter" style="width:80px;display:inline-block" ng-if="vm.auctionSystemProduct.playerValueOperator === 'range'")
                .full-width-input-block
                    label {{"TOTAL_CONSUMPTION_TIMES" | translate}}
                    div(style="display:inline-block;")
                        select.form-control(ng-model="vm.auctionSystemProduct.consumptionTimesOperator" style="width:100px;display:inline-block")
                            option(value='>=') {{'>='}}
                            option(value='=') {{'='}}
                            option(value='<=') {{'<='}}
                            option(value='range') {{'range' | translate}}
                        div(style="width:8px;display:inline-block")
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.consumptionTimesFormal" style="width:80px;display:inline-block")
                        div.text-center(style="width:15px;display:inline-block" ng-if="vm.auctionSystemProduct.consumptionTimesOperator === 'range'") -
