form(name='form_auctionSystem').row
    .col-md-12
        button.btn.btn-primary.common-button(ng-class='{active: vm.selectedAuctionSystemTab === "createProduct"}', ng-click='vm.auctionSystemTabClicked("createProduct")')
            span {{"Create Product" | translate}}
        button.btn.btn-primary.common-button(ng-class='{active: vm.selectedAuctionSystemTab === "monitoringSystem"}', ng-click='vm.auctionSystemTabClicked("monitoringSystem")')
            span {{"Monitoring System" | translate}}

    .col-md-12(ng-if='!vm.selectedAuctionSystemTab')
        .text-center
            label.text-danger {{'Please select a type' | translate}}

    .col-md-6(ng-if="vm.selectedAuctionSystemTab=='createProduct'")
        div
          .inlineBlk
              button.btn.btn-primary( ng-if="vm.numExcludeAuction==0", ng-click='vm.initCreateProduct=true;vm.auctionSystemEditStatus=false;vm.initAuctionSystemCreateProduct();') {{"ADD" | translate}}
          .inlineBlk
              button.btn.btn-primary( ng-if="vm.numExcludeAuction!=0", DISABLED) {{"ADD" | translate}}
          .inlineBlk
              button.btn.btn-primary( ng-click='vm.moveToNotAvailable()') {{"MOVE" | translate}}
          .inlineBlk
              button.btn.btn-primary( ng-if="vm.numExcludeAuction==1", ng-click='vm.loadAuctionItem("excludeAuctionItem")') {{"Edit" | translate}}
          .inlineBlk
              button.btn.btn-primary( ng-if="vm.numExcludeAuction!=1", ng-click='vm.loadAuctionItem("excludeAuctionItem")', DISABLED) {{"Edit" | translate}}
          .inlineBlk
              button.btn.btn-danger( ng-click='vm.removeExclusiveAuction()') {{"Delete" | translate}}
        table#auctionPublishTable.display.table-condensed(style="min-width:100%;")
        #auctionPublishTablePage
        br

        div
          .inlineBlk
              button.btn.btn-primary( ng-if="vm.numNotAvailableAuction==0", ng-click='vm.initCreateProduct=true;vm.auctionSystemEditStatus=false;vm.initAuctionSystemCreateProduct();') {{"ADD" | translate}}
          .inlineBlk
              button.btn.btn-primary( ng-if="vm.numNotAvailableAuction!=0", DISABLED) {{"ADD" | translate}}
          .inlineBlk
              button.btn.btn-primary( ng-click='vm.moveToExclusive()') {{"MOVE" | translate}}
          .inlineBlk
              button.btn.btn-primary( ng-if="vm.numNotAvailableAuction==1", ng-click='vm.loadAuctionItem("notAvailableAuctionItem")') {{"Edit" | translate}}
          .inlineBlk
              button.btn.btn-primary( ng-if="vm.numNotAvailableAuction!=1", ng-click='vm.loadAuctionItem("notAvailableAuctionItem")', DISABLED) {{"Edit" | translate}}
          .inlineBlk
              button.btn.btn-danger( ng-click='vm.removeNotAvailableAuction()') {{"Delete" | translate}}
        table#auctionNotAvailableTable.display.table-condensed(style="min-width:100%;")
        #auctionNotAvailableTablePage

    .col-md-6(ng-if='vm.selectedAuctionSystemTab === "createProduct" && checkViewPermission("Platform", "AuctionSystem", "createProduct") && vm.initCreateProduct')
        #auctionProductDetailTable.panel.panel-primary
            .panel-heading.panel-heading-sm
                label {{"Create Product" | translate}}
            .panel-body(style='margin: 5px; height: 880px; overflow-y: auto;')
                .full-width-input-block
                    label {{"USER_TYPE" | translate}}
                    select.form-control(ng-model="vm.auctionSystemProduct.playerType")
                        option(value='Real Player (all)') {{'REAL_PLAYER_ALL' | translate}}
                        option(value='Real Player (Individual)') {{'REAL_PLAYER_INDIVIDUAL' | translate}}
                        option(value='Real Player (Under Partner)') {{'REAL_PLAYER_UNDER_PARTNER' | translate}}
                        option(value='Test Player') {{'TEST_PLAYER' | translate}}
                .full-width-input-block
                    label {{"Player Level" | translate}}
                    select.form-control(ng-model='vm.auctionSystemProduct.playerLevel')
                        option(value='') {{'ALL' | translate}}
                        option(ng-repeat='(i,v) in vm.allPlayerLvl', value='{{v._id}}') {{v.name | translate}}
                .full-width-input-block
                    label.control-label {{'CREDIBILITY' | translate}}
                    div(style="display:inline-block;")
                        select.spicker.form-control(ng-model='vm.auctionSystemProduct.credibilityRemarks', ng-options='remark._id as remark.name | translate for remark in vm.filterCredibilityRemarks', multiple, static-bsp, bsp, data-actions-box='true')
                .full-width-input-block
                    label.control-label {{'CREDIBILITY_FILTER' | translate}}
                    div(style="display:inline-block;")
                        select.spicker.form-control(ng-model='vm.auctionSystemProduct.filterCredibilityRemarks', ng-options='remark._id as remark.name | translate for remark in vm.filterCredibilityRemarks', multiple, static-bsp, bsp, data-actions-box='true')
                .full-width-input-block
                    //上次登入（距今）
                    label {{"LAST_ACCESS_TILL_NOW" | translate}}
                    div(style="display:inline-block;")
                        select.form-control(ng-model="vm.auctionSystemProduct.lastAccessOperator" style="display:inline-block")
                            option(value='0-7') {{'0-7'}}{{'DAYS' | translate}}
                            option(value='8-14') {{'8-14'}}{{'DAYS' | translate}}
                            option(value='15-28') {{'15-28'}}{{'DAYS' | translate}}
                            option(value='29') {{'29'}}{{'DAYS_AND_ABOVE' | translate}}
                            option(value='range') {{'range' | translate}}
                        div(style="width:8px;display:inline-block")
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.lastAccessFormal" style="width:80px;display:inline-block" ng-show="vm.auctionSystemProduct.lastAccessOperator === 'range'")
                        div.text-center(style="width:15px;display:inline-block" ng-show="vm.auctionSystemProduct.lastAccessOperator === 'range'") -
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.lastAccessLatter" style="width:80px;display:inline-block" ng-show="vm.auctionSystemProduct.lastAccessOperator === 'range'")
                .full-width-input-block
                    //过滤回访（天）
                    label {{"FILTER_FEEDBACK_DAY" | translate}}
                    div(style="display:inline-block;")
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.filterFeedback" style="display:inline-block")
                .full-width-input-block
                    label.control-label {{'FILTER_FEEDBACK_TOPIC' | translate}}
                    div(style="display:inline-block;")
                        select.form-control(ng-model='vm.auctionSystemProduct.filterFeedbackTopic', ng-options='topic.key as topic.value for topic in vm.playerFeedbackTopic', multiple, bsp, data-actions-box='true')
                .full-width-input-block
                    label {{"DEPOSIT_COUNT" | translate}}
                    div(style="display:inline-block;")
                        select.form-control(ng-model="vm.auctionSystemProduct.depositCountOperator" style="width:100px;display:inline-block")
                            option(value='>=') {{'>='}}
                            option(value='=') {{'='}}
                            option(value='<=') {{'<='}}
                            option(value='range') {{'range' | translate}}
                        div(style="width:8px;display:inline-block")
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.depositCountFormal" style="width:80px;display:inline-block")
                        div.text-center(style="width:15px;display:inline-block" ng-if="vm.auctionSystemProduct.depositCountOperator === 'range'") -
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.depositCountLatter" style="width:80px;display:inline-block" ng-if="vm.auctionSystemProduct.depositCountOperator === 'range'")
                .full-width-input-block
                    label {{"PLAYER_VALUE" | translate}}
                    div(style="display:inline-block;")
                        select.form-control(ng-model="vm.auctionSystemProduct.playerValueOperator" style="width:100px;display:inline-block")
