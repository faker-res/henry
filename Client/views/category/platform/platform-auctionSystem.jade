                            option(value='=') {{'='}}
                            option(value='<=') {{'<='}}
                            option(value='range') {{'range' | translate}}
                        div(style="width:8px;display:inline-block")
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.bonusAmountFormal" style="width:80px;display:inline-block")
                        div.text-center(style="width:15px;display:inline-block" ng-if="vm.auctionSystemProduct.bonusAmountOperator === 'range'") -
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.bonusAmountLatter" style="width:80px;display:inline-block" ng-if="vm.auctionSystemProduct.bonusAmountOperator === 'range'")
                .full-width-input-block
                    label {{"BonusTime" | translate}}
                    div(style="display:inline-block;")
                        select.form-control(ng-model="vm.auctionSystemProduct.withdrawTimesOperator" style="width:100px;display:inline-block")
                            option(value='>=') {{'>='}}
                            option(value='=') {{'='}}
                            option(value='<=') {{'<='}}
                            option(value='range') {{'range' | translate}}
                        div(style="width:8px;display:inline-block")
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.withdrawTimesFormal" style="width:80px;display:inline-block")
                        div.text-center(style="width:15px;display:inline-block" ng-if="vm.auctionSystemProduct.withdrawTimesOperator === 'range'") -
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.withdrawTimesLatter" style="width:80px;display:inline-block" ng-if="vm.auctionSystemProduct.withdrawTimesOperator === 'range'")
                .full-width-input-block
                    label {{"TOTAL_TOP_UP" | translate}}
                    div(style="display:inline-block;")
                        select.form-control(ng-model="vm.auctionSystemProduct.topUpSumOperator" style="width:100px;display:inline-block")
                            option(value='>=') {{'>='}}
                            option(value='=') {{'='}}
                            option(value='<=') {{'<='}}
                            option(value='range') {{'range' | translate}}
                        div(style="width:8px;display:inline-block")
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.topUpSumFormal" style="width:80px;display:inline-block")
                        div.text-center(style="width:15px;display:inline-block" ng-if="vm.auctionSystemProduct.topUpSumOperator === 'range'") -
                        input.form-control(type="number", min=0, ng-model="vm.auctionSystemProduct.topUpSumLatter" style="width:80px;display:inline-block" ng-if="vm.auctionSystemProduct.topUpSumOperator === 'range'")
                .full-width-input-block
                    label {{"GAME_LOBBY" | translate}}
                    div(style="display:inline-block;")
                        select.form-control(ng-model='vm.auctionSystemProduct.gameProviderId', ng-options='provider._id as provider.name for provider in vm.allGameProviders', multiple, bsp, data-actions-box='true')
                .full-width-input-block
                    label.control-label {{'REGISTRATION_TIME_START' | translate}}
                    #auctionSystemProductRegisterStartTimePicker.datetimepicker(style="display:inline-block;")
                        input.input-append.playerDate(style='width:76%,border:0;', data-format="dd/MM/yyyy hh:mm:ss", type='text')
                        span.add-on
                            i.fa-calendar.fa(data-time-icon='fa fa-clock-o', data-date-icon='fa fa-calendar')
                .full-width-input-block
                    label.control-label {{'REGISTRATION_TIME_END' | translate}}
                    #auctionSystemProductRegisterEndTimePicker.datetimepicker(style="display:inline-block;")
                        input.input-append.playerDate(style='width:76%,border:0;', data-format="dd/MM/yyyy hh:mm:ss", type='text')
                        span.add-on
                            i.fa-calendar.fa(data-time-icon='fa fa-clock-o', data-date-icon='fa fa-calendar')
                .full-width-input-block
                    label {{"REGISTRATION_DEPARTMENT" | translate}}
                    div(style="display:inline-block;")
                        select.spicker.form-control(ng-model='vm.auctionSystemProduct.departments', bsp, multiple, data-actions-box='true' ng-change="vm.setQueryRole(vm.auctionSystemProduct)", ng-options='dp._id as dp.departmentName | translate for dp in vm.queryDepartments')
                .full-width-input-block
                    label {{"REGISTRATION_ROLE" | translate}}
                    div(style="display:inline-block;")
                        select.spicker.form-control(ng-model='vm.auctionSystemProduct.roles', bsp, multiple, data-actions-box='true' ng-change="vm.setQueryAdmins(vm.auctionSystemProduct)", ng-options='dp._id as dp.roleName | translate for dp in vm.queryRoles')
                .full-width-input-block
                    label {{"REGISTRATION_ADMIN" | translate}}
                    div(style="display:inline-block;")
                        select.spicker.form-control(ng-model='vm.auctionSystemProduct.admins', bsp, multiple, data-actions-box='true', ng-options='dp._id as dp.adminName | translate for dp in vm.queryAdmins')
                hr

                // 中间「优惠类型」选择
                .full-width-input-block
                    label *{{"REWARD_TYPE" | translate}}
                        i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'REWARD_TYPE_DESCRIPTION' | translate}}")
                    div(style="display:inline-block;")
                        select.form-control(ng-model='vm.auctionProductReward.rewardType' ng-change="vm.auctionRewardTypeChanged(vm.auctionProductReward.rewardType)", required)
                            //option(value='') {{'all' | translate}}
                            option(value='promoCode') {{'Promo Code' | translate}}
                            option(value='openPromoCode') {{'Open Promo Code' | translate}}
                            option(value='promotion') {{'Promotion' | translate}}
                            option(value='realPrize') {{'Real Prize' | translate}}
                            option(value='rewardPointsChange') {{'Reward Points Change' | translate}}

                div(ng-if="vm.selectedAuctionRewardType === 'promoCode'")
                    .full-width-input-block
                        label {{"Reward amount is dynamically changed" | translate}}
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'Fields will be shown accordingly' | translate}}")
                        div(style="display:inline-block;")
                            input.form-control(type="checkbox", ng-model='vm.auctionProductReward.isDynamicRewardAmount')
                    .full-width-input-block(ng-if="vm.auctionProductReward.isDynamicRewardAmount")
                        label *{{"REWARD" | translate}} %
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'This only appears when reward amount is dynamic' | translate}}")
                        div(style="display:inline-block;")
                            span.percentage
                                input.form-control(type='number', min='0', percentage, style="display: inline-block", ng-model='vm.auctionProductReward.rewardPercentage' required)
                    .full-width-input-block
                        label *{{"The Minimum Top-up Amount" | translate}}
                        div(style="display:inline-block;")
                            input.form-control(type="number" ng-model="vm.auctionProductReward.minimumTopUpAmount" required)
                    .full-width-input-block(ng-if="vm.auctionProductReward.isDynamicRewardAmount")
                        label *{{"The Maximum Reward Amount" | translate}}
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'This only appears when reward amount is dynamic' | translate}}")
                        div(style="display:inline-block;")
                            input.form-control(type="number", ng-model="vm.auctionProductReward.maximumRewardAmount" required)
                    .full-width-input-block(ng-if="vm.auctionProductReward.isDynamicRewardAmount")
                        label *{{"Spending times" | translate}}
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'This only appears when reward amount is dynamic' | translate}}")
                        div(style="display:inline-block;")
                            input.form-control(type="number", ng-model="vm.auctionProductReward.spendingTimes" required)
                    .full-width-input-block(ng-if="!vm.auctionProductReward.isDynamicRewardAmount")
                        label *{{"REWARD_AMOUNT" | translate}}
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'This only appears when reward amount is not dynamic' | translate}}")
                        div(style="display:inline-block;")
                            input.form-control(type="number", ng-model="vm.auctionProductReward.rewardAmount" required)
                    .full-width-input-block(ng-if="!vm.auctionProductReward.isDynamicRewardAmount")
                        label *{{"Spending Amount" | translate}}
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'This only appears when reward amount is not dynamic' | translate}}")
                        div(style="display:inline-block;")
                            input.form-control(type="number", ng-model="vm.auctionProductReward.spendingAmount" required)
                    .full-width-input-block
                        label {{"SHARE_WITH_XIMA" | translate}}
                        div(style="display:inline-block;")
                            input.form-control(type="checkbox", ng-model="vm.auctionProductReward.isSharedWithXima")
                    .full-width-input-block
                        label *{{"Due Date (In Day)" | translate}}
                        div(style="display:inline-block;")
                            input.form-control(type="number", ng-model="vm.auctionProductReward.dueDateInDay" required)
                    .full-width-input-block
                        label {{"Forbid withdraw after apply reward" | translate}}
                        div(style="display:inline-block;")
                            input.form-control(type="checkbox", ng-model="vm.auctionProductReward.isForbidWithdrawal")
                    .full-width-input-block(ng-if="vm.selectedPlatform.data.useProviderGroup")
                        label {{"Locked Lobby" | translate}}
                        div(style="display:inline-block;")
                            select.form-control(ng-model='vm.auctionProductReward.allowedProvider')
                                option(style="display: inline-block" value='') {{"LOCAL_CREDIT" | translate}}
                                option(style="display: inline-block" ng-repeat='v in vm.gameProviderGroup', value='{{v._id}}' ng-init='$last && vm.endLoadWeekDay()') {{v.name}}
                    .full-width-input-block
                        label {{"Product Image URL" | translate}}
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'PRODUCT_DESCRIPTION' | translate}}")
                        div(style="display:inline-block;")
                            input.form-control(type="text" ng-model="vm.auctionProductReward.productImageUrl")
                    .full-width-input-block
                        label {{"DESCRIPTION" | translate}}
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'Product Description' | translate}}")
                        div(style="display:inline-block;")
                            textarea.form-control(style="resize: none", type="text" ng-model="vm.auctionProductReward.description")

                div(ng-if="vm.selectedAuctionRewardType === 'openPromoCode'")
                    .full-width-input-block
                        label {{"Reward amount is dynamically changed" | translate}}
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'Fields will be shown accordingly' | translate}}")
                        div(style="display:inline-block;")
                            input.form-control(type="checkbox", ng-model='vm.auctionProductReward.isDynamicRewardAmount')
                    .full-width-input-block(ng-if="vm.auctionProductReward.isDynamicRewardAmount")
                        label *{{"REWARD" | translate}} %
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'This only appears when reward amount is dynamic' | translate}}")
                        div(style="display:inline-block;")
                            span.percentage
                                input.form-control(type='number', min='0', percentage, style="display: inline-block", ng-model='vm.auctionProductReward.rewardPercentage' required)
                    .full-width-input-block
                        label *{{"The Minimum Top-up Amount" | translate}}
                        div(style="display:inline-block;")
                            input.form-control(type="number" ng-model="vm.auctionProductReward.minimumTopUpAmount" required)
                    .full-width-input-block(ng-if="vm.auctionProductReward.isDynamicRewardAmount")
                        label *{{"The Maximum Reward Amount" | translate}}
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'This only appears when reward amount is dynamic' | translate}}")
                        div(style="display:inline-block;")
                            input.form-control(type="number", ng-model="vm.auctionProductReward.maximumRewardAmount" required)
                    .full-width-input-block(ng-if="vm.auctionProductReward.isDynamicRewardAmount")
                        label *{{"Spending times" | translate}}
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'This only appears when reward amount is dynamic' | translate}}")
                        div(style="display:inline-block;")
                            input.form-control(type="number", ng-model="vm.auctionProductReward.spendingTimes" required)
                    .full-width-input-block(ng-if="!vm.auctionProductReward.isDynamicRewardAmount")
                        label *{{"REWARD_AMOUNT" | translate}}
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'This only appears when reward amount is not dynamic' | translate}}")
                        div(style="display:inline-block;")
                            input.form-control(type="number", ng-model="vm.auctionProductReward.rewardAmount" required)
                    .full-width-input-block(ng-if="!vm.auctionProductReward.isDynamicRewardAmount")
                        label *{{"Spending Amount" | translate}}
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'This only appears when reward amount is not dynamic' | translate}}")
                        div(style="display:inline-block;")
                            input.form-control(type="number", ng-model="vm.auctionProductReward.spendingAmount" required)
                    .full-width-input-block
                        label {{"SHARE_WITH_XIMA" | translate}}
                        div(style="display:inline-block;")
                            input.form-control(type="checkbox", ng-model="vm.auctionProductReward.isSharedWithXima")
                    .full-width-input-block
                        label *{{"Due Date (In Day)" | translate}}
                        div(style="display:inline-block;")
                            input.form-control(type="number", ng-model="vm.auctionProductReward.dueDateInDay" required)
                    .full-width-input-block
                        label {{"Forbid withdraw after apply reward" | translate}}
                        div(style="display:inline-block;")
                            input.form-control(type="checkbox", ng-model="vm.auctionProductReward.isForbidWithdrawal")
                    .full-width-input-block(ng-if="vm.selectedPlatform.data.useProviderGroup")
                        label {{"Locked Lobby" | translate}}
                        div(style="display:inline-block;")
                            select.form-control(ng-model='vm.auctionProductReward.allowedProvider')
                                option(style="display: inline-block" value='') {{"LOCAL_CREDIT" | translate}}
                                option(style="display: inline-block" ng-repeat='v in vm.gameProviderGroup', value='{{v._id}}' ng-init='$last && vm.endLoadWeekDay()') {{v.name}}
                    .full-width-input-block
                        label {{"PromoCode" | translate}}
                            i.fa.fa-question-circle.questionTooltip(ng-attr-title="{{'The promo code will be generated automatically when launching; the promo code will be useless when a new round begins' | translate}}")
                        div(style="display:inline-block;" ng-if="!vm.auctionSystemEditStatus")
                            input.form-control(type="text" ng-model="vm.auctionProductReward.promoCode" ng-disabled="true")
                        div(style="display:inline-block;" ng-if="vm.auctionSystemEditStatus")
                            input.form-control.widthto80(type="text" ng-model="vm.auctionProductReward.promoCode" ng-disabled="true")
                            button.btn.btn-primary.widthto20(ng-if="vm.auctionSystemEditStatus", ng-click= 'vm.generateOpenPromoCodeAuctionItem();')
                                text {{'GENERATE' | translate}}
                    .full-width-input-block
                        label {{"RECEIVED_UPPER_LIMIT_FOR_INDIVIDUAL" | translate}}
                        div(style="display:inline-block;")
                            input.form-control(type="number" ng-model="vm.auctionProductReward.upperLimitPerPlayer")
                    .full-width-input-block
                        label {{"TOTAL_SENDING_LIMIT" | translate}}
