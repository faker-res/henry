style.
    .bg-secondary {
        background-color: #868E96;
    }
.row
    .col-md-12
        button.btn.btn-primary.common-button(ng-class='{active: vm.selectedRewardPointTab === "popularRecommendation"}', ng-click='vm.rewardPointsTabClicked("rewardPointsRule")')
            span {{"POPULAR_RECOMMENDATION" | translate}}


    .col-md-12
        .panel.panel-primary
            .panel-heading.panel-heading-sm
                label {{"FrontendConfiguration" | translate}}
            .panel-body.common-right-sub-panel-body(ng-if="!vm.curPlatformText")
            .panel-body.common-right-sub-panel-body(ng-if="vm.curPlatformText")
                .text-center(ng-if='!vm.selectedRewardPointTab')
                    label.text-danger {{'Please select a type' | translate}}

                // Tab - popular recommendation
                div.col-md-12(ng-if='vm.selectedRewardPointTab=="rewardPointsRule" && checkViewPermission("Platform", "FrontEndConfiguration", "popularRecommendation")')
                    div(style="background: #d3d3d34d; padding: 10px; margin: 10px; position:relative;")
                        div(style="display: inline;")
                            label {{'Setting For Popular Recommendation' | translate}}
                            br
                            label.text-danger {{'Note: only allow to add, delete, move, double click to edit' | translate}}
                        btn.btn.btn-success(style="position: absolute; right: 20px; top: 50%; transform: translateY(-50%);", ng-click="vm.addNewPopularRecommendationSetting()")
                            span.fa.fa-pencil-square-o {{"ADD" | translate}}
                    div.col-md-4.fronendConfigDiv
                        span(style='font-weight: bold;') {{'First_Page_Popular_Recommendation' | translate}}

                    div.col-md-4.fronendConfigDiv
                        span(style='font-weight: bold;') {{'Recommended_Game' | translate}}

                    div.col-md-4.fronendConfigDiv
                        span(style='font-weight: bold;') {{'Bottom_Banner' | translate}}


#popularRecommendationSetting.modal.fade(tabindex='-1', role='dialog', data-backdrop='static', keyboard=false,aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
        .modal-content
            .modal-header
                a.fa.fa-times.close(type='button', data-dismiss='modal')
                h4.modal-title {{"Add New Popular Recommendation Setting" | translate}}
            .modal-body
                .panel.panel-primary
                    .panel-body.margin-all-5
                        .col-md-6
                            .full-width-input-block
                                label(style="width: 30%;") {{"TITLE"|translate}}
                                div.inline-block(style="width: 70%;")
                                    input.form-control(ng-model="vm.popularRecommendationSetting.title")
                            .full-width-input-block
                                label(style="width: 30%;") {{"DISPLAY TITLE"|translate}}
                                div.inline-block(style="width: 70%;")
                                    input.form-control(ng-model="vm.popularRecommendationSetting.displayTitle")
                            .full-width-input-block
                                label(style="width: 30%;") {{"CATEGORY"|translate}}
                                div.inline-block(style="width: 70%;")
                                    select.form-control.inline-block(ng-model="vm.popularRecommendationSetting.category" ng-options='v as i | translate for (i, v) in vm.popularRecommendationCategory')

                            div.frontendConfigSeperator
                            .full-width-input-block
                                label(style="width: 30%;") PC {{"IMAGE"|translate}}
                                div.inline-block(style="width: 70%;")
                                    input#popularRecommendationPcImageFile(type="file")
                            .full-width-input-block
                                label(style="width: 30%;") PC {{"ON-CLICK ACTION"|translate}}
                                div.inline-block(style="width: 70%;")
                                    select.form-control.inline-block(ng-model="vm.popularRecommendationSetting.pc.onClickAction" ng-options='v as i | translate for (i, v) in vm.frontEndSettingOnClickAction')
                            .full-width-input-block(ng-if="vm.popularRecommendationSetting.pc.onClickAction == 1")
                                label(style="width: 30%;") {{"PAGE DETAIL"|translate}}
                                div.inline-block(style="width: 70%;")
                                    input.form-control(ng-model="vm.popularRecommendationSetting.pc.newPage", placeholder='{{"Please write down or upload the image/web page file" | translate}}')
                                    input#popularRecommendationPageDetailFile(type="file")
                            .full-width-input-block(ng-if="vm.popularRecommendationSetting.pc.onClickAction == 2")
                                label(style="width: 30%;") {{"PAGE DETAIL"|translate}}
                                div.inline-block(style="width: 70%;")
                                    input.form-control(ng-model="vm.popularRecommendationSetting.pc.pageDetail", placeholder='{{"Please write down the link or upload the web page file" | translate}}')
                                    input#popularRecommendationPageDetailFile(type="file")
                            .full-width-input-block(ng-if="vm.popularRecommendationSetting.pc.onClickAction == 3")
                                label(style="width: 30%;") {{"ACTIVITY NAME"|translate}}
                                div.inline-block(style="width: 70%;")
                                    select.form-control.inline-block(ng-model="vm.popularRecommendationSetting.pc.rewardName", ng-options='v._id as v.name | translate for v in vm.allRewardEvent')
