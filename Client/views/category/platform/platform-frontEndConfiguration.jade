style.
    .bg-secondary {
        background-color: #868E96;
    }
.row
    .col-md-12
        button.btn.btn-primary.common-button(ng-class='{active: vm.selectedFrontEndSettingTab === "popularRecommendation"}', ng-click='vm.frontEndSettingTabClicked("popularRecommendation")')
            span {{"POPULAR_RECOMMENDATION" | translate}}
    .col-md-12
        .panel.panel-primary
            .panel-heading.panel-heading-sm
                label {{"FrontendConfiguration" | translate}}
            .panel-body.common-right-sub-panel-body(ng-if="!vm.curPlatformText")
            .panel-body.common-right-sub-panel-body(ng-if="vm.curPlatformText")
                .text-center(ng-if='!vm.selectedFrontEndSettingTab')
                    label.text-danger {{'Please select a type' | translate}}

                // Tab - popular recommendation
                .row
                    .col-md-12
                        .well.col-xs-12
                            .search-filters-item
                                label {{'PRODUCT_NAME' | translate}}
                                select.form-control(ng-model='vm.filterPopularRecommendationPlatform', ng-options='v._id as v.name$ for v in vm.allPlatformData', ng-change='vm.getPlatformGameData(vm.filterPopularRecommendationPlatform); vm.getAllPlayerLevels(vm.filterPopularRecommendationPlatform); vm.loadPopularRecommendationSetting(vm.filterPopularRecommendationPlatform); ')
                .text-center(ng-if='!vm.filterPopularRecommendationPlatform')
                    label.text-danger {{"NO_PLATFORM_MESSAGE" | translate}}

                .col-md-12(ng-if='vm.selectedFrontEndSettingTab == "popularRecommendation" && vm.filterPopularRecommendationPlatform && checkViewPermission("Platform", "FrontEndConfiguration", "popularRecommendation")')
                    div(style="background: #d3d3d34d; padding: 10px; margin: 10px; position:relative;")
                        div(style="display: inline;")
                            label {{'Setting For Popular Recommendation' | translate}}
                            br
                            label.text-danger {{'Note: only allow to add, delete, move, double click to edit' | translate}}
                        btn.btn.btn-success(style="position: absolute; right: 20px; top: 50%; transform: translateY(-50%);", ng-click="vm.addNewPopularRecommendationSetting()")
                            span.fa.fa-pencil-square-o {{"ADD" | translate}}
                    div.col-md-4.fronendConfigDiv
                        span(style='font-weight: bold;') {{'First_Page_Popular_Recommendation' | translate}}

                    div.col-md-4.fronendConfigDiv
                        span(style='font-weight: bold;') {{'Recommended_Game' | translate}}

                    div.col-md-4.fronendConfigDiv
                        span(style='font-weight: bold;') {{'Bottom_Banner' | translate}}


