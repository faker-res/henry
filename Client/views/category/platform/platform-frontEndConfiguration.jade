#modalEditRewardPointsRandom.modal.fade(tabindex='-1', role='dialog', data-backdrop='static', keyboard=false,aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
        .modal-content
            .modal-header
                a.fa.fa-times.close(type='button', data-dismiss='modal')
                h4.modal-title {{"EDIT_REWARD_POINTS_RANKING" | translate}}  {{vm.selectedRandomRanking.playerName}}
            .modal-body
                .panel.panel-primary
                    .panel-body
                        .row
                            .col-md-12
                                .form-group.col-md-6
                                    label.control-label {{"PLAYERNAME" | translate}}
                                    input.form-control(type="text", ng-model="vm.selectedRandomRanking.playerName")
                                .form-group.col-md-6
                                    label.control-label {{"PLAYER_LEVEL" | translate}}
                                    select.form-control(ng-model='vm.selectedRandomRanking.playerLevel._id', ng-options='v._id as v.name for (i,v) in vm.allPlayerLvl' )
                            .col-md-12
                                .form-group.col-md-6
                                    label.control-label {{"REWARD_POINTS_CURRENT" | translate}}
                                    input.form-control(type="Number", ng-model="vm.selectedRandomRanking.points")
            .modal-footer
                button.btn-sm.margin-right-5.btn.btn-primary.col-md-2(data-dismiss='modal' ng-click='vm.editRandomRanking()') {{"UPDATE" | translate}}
                button.btn-sm.margin-right-5.btn.btn-warning.col-md-2(data-dismiss='modal') {{"CANCEL" | translate}}

