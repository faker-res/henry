.well
    label {{vm.showRewardTypeData.params.params.ratio.des | translate}}
    div(style='width:100%;overflow-x:scroll')
        table.table
            tbody
                tr(ng-repeat='(row,rowdata) in vm.allPlayerLvl')
                    td
                        strong  {{rowdata.name | translate}}
                    td(ng-repeat='(col,coldata) in vm.allGameTypes', style='white-space: nowrap;padding-right:20px')
                        div
                            text {{coldata | translate}}
                            .percentage
                                input.form-control(type="Number", min='0', percentage, style='display:inline-block; min-width:65px;', ng-model="vm.rewardParams.ratio[rowdata.value][col]", ng-disabled='vm.platformRewardShowEdit()')
