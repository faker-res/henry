.col-md-12.well
    table.simple-table.table-vertical-middle.margin-medium
        thead
            tr
                th(style='min-width:150px;') {{'Offer Name' | translate}}
                th(style='min-width:150px;') {{'Original Amount' | translate}}
                th(style='min-width:150px;') {{'Offer Amount' | translate}}
                th(style='min-width:110px;') {{'Display Original Price' | translate}}
                th(style='min-width:110px;') {{'Quantity' | translate}}
                th(style='min-width:110px;') {{'Limit Apply Per Person' | translate}}
                th(style='min-width:110px;') {{'Offer Amount' | translate}}
                th(style='min-width:110px;') {{'Bet' | translate}}
                th(style='min-width:150px;') {{'Game Provider' | translate}}
                th(style='min-width:150px;') {{'Repeat Day' | translate}}
                th(style='min-width:110px;') {{'inStock DisplayTime' | translate}}
                th(style='min-width:110px;') {{'Out Of Stock DisplayTime' | translate}}
                th(style='min-width:110px;') {{'CountDown Time' | translate}}
                th(style='min-width:110px;') {{'Image Url' | translate}}
                th(style='min-width:50px;')

        tbody
            tr
                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.name.des | translate}}
                        input.form-control(type='String', min='0', ng-model='vm.rewardParams.name', ng-disabled='vm.platformRewardShowEdit()', required)
                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.oriPrice.des | translate}}
                        input.form-control(type='number', min='0', ng-model='vm.rewardParams.oriPrice', ng-disabled='vm.platformRewardShowEdit()', required)
                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.offerPrice.des | translate}}
                        input.form-control(type='number', min='0', ng-model='vm.rewardParams.offerPrice', ng-disabled='vm.platformRewardShowEdit()', required)

                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.displayOriPrice.des | translate}}
                        input(type='checkbox', ng-model='vm.rewardParams.displayOriPrice', ng-disabled='vm.platformRewardShowEdit()')

                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.qty.des | translate}}
                        input.form-control(type='number', min='0', ng-model='vm.rewardParams.qty', ng-disabled='vm.platformRewardShowEdit()', required)

                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.limitPerson.des | translate}}
                        input.form-control(type='number', min='0', ng-model='vm.rewardParams.limitPerson', ng-disabled='vm.platformRewardShowEdit()', required)

                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.limitTime.des | translate}}
                        input.form-control(type='number', min='0', ng-model='vm.rewardParams.limitTime', ng-disabled='vm.platformRewardShowEdit()', required)
                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.bet.des | translate}}
                        input.form-control(type='number', min='0', ng-model='vm.rewardParams.bet', ng-disabled='vm.platformRewardShowEdit()', required)

                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.providers.des | translate}}
                        select.form-control(ng-if='vm.providerGame[vm.rewardParams.providers[i].providerObjId] && vm.providerGame[vm.rewardParams.providers[i].providerObjId].length>0', ng-model='vm.rewardParams.providers[i]', multiple, ng-disabled='vm.platformRewardShowEdit()')
                            option(ng-repeat='(i,v) in vm.providerGame[vm.rewardParams.providers[i].providerObjId]', value='{{v._id}}') {{v.name}}
                        label.form-control(ng-if='vm.providerGame[vm.rewardParams.providers[i].providerObjId] && vm.providerGame[vm.rewardParams.providers[i].providerObjId].length==0') {{"NO_GAME" | translate}}
                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.repeatWeekDay.des | translate}}
                        select.form-control(ng-if='vm.providerGame[vm.rewardParams.providers[i].providerObjId] && vm.providerGame[vm.rewardParams.providers[i].providerObjId].length>0', ng-model='vm.rewardParams.providers[i].games', multiple, ng-disabled='vm.platformRewardShowEdit()')
                            option(ng-repeat='(i,v) in vm.providerGame[vm.rewardParams.providers[i].providerObjId]', value='{{v._id}}') {{v.name}}
                        label.form-control(ng-if='vm.providerGame[vm.rewardParams.providers[i].providerObjId] && vm.providerGame[vm.rewardParams.providers[i].providerObjId].length==0') {{"NO_GAME" | translate}}
                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.inStockDisplayTime.des | translate}}
                        input.form-control(type='number', min='0', ng-model='vm.rewardParams.inStockDisplayTime', ng-disabled='vm.platformRewardShowEdit()', required)
                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.outStockDisplayTime.des | translate}}
                        input.form-control(type='number', min='0', ng-model='vm.rewardParams.outStockDisplayTime', ng-disabled='vm.platformRewardShowEdit()', required)

                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.countDownTime.des | translate}}
                        input.form-control(type='number', min='0', ng-model='vm.rewardParams.countDownTime', ng-disabled='vm.platformRewardShowEdit()', required)

                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.imgUrl.des | translate}}
                        input.form-control(type='number', min='0', ng-model='vm.rewardParams.imgUrl', ng-disabled='vm.platformRewardShowEdit()', required)

                td
                    i.fa.fa-plus(ng-click='vm.updateLimitedOffersEdit("add",vm.rewardParams);vm.tempNewRewardEntry={}')
            //tr
                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.checkConsumption.des | translate}}
                        input(type='checkbox', ng-model='vm.rewardParams.checkConsumption', ng-disabled='vm.platformRewardShowEdit()')
                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.numOfConsumeDays.des | translate}}
                        input.form-control(type='number', min='0', ng-model='vm.rewardParams.numOfConsumeDays', ng-disabled='vm.platformRewardShowEdit()', required)
                td
                    .full-width-input-block
                        label {{vm.showRewardTypeData.params.params.minConsumeAmount.des | translate}}
                        input.form-control(type='number', min='0', ng-model='vm.rewardParams.minConsumeAmount', ng-disabled='vm.platformRewardShowEdit()', required)
    .full-width-input-block(ng-if='vm.rewardParams.checkConsumption')
        label {{vm.showRewardTypeData.params.params.andProvider.des | translate}}
        input(type='checkbox', ng-model='vm.rewardParams.andProvider', ng-disabled='vm.platformRewardShowEdit()')
