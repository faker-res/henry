.well
    .full-width-input-block(ng-if="vm.platformRewardPageName!=='showReward'")
        label(style='vertical-align: top;') {{"REWARD_PROVIDER" | translate}}
        select.form-control(ng-model='vm.rewardParams.provider',ng-change='vm.getProviderGames(vm.rewardParams.provider)', ng-disabled='vm.platformRewardShowEdit()', required)
            option(ng-repeat='(i,v) in vm.platformProvider', value='{{v._id}}') {{v.name}}
    .full-width-input-block(ng-if="vm.platformRewardPageName=='showReward'")
        label(style='vertical-align: top;') {{"REWARD_PROVIDER" | translate}}
        select.form-control(ng-model='vm.rewardParams.provider', disabled)
            option(selected) {{vm.getProviderText(vm.rewardParams.provider)|translate}}

    .full-width-input-block
        label {{vm.showRewardTypeData.params.params.games.des|translate}}
        .label-checkbox(ng-if="vm.platformRewardPageName ==='showReward'", style='max-height:300px;overflow-y:auto')
            //text abc{{vm.rewardParams.games}}
            label(ng-repeat='(i,v) in vm.rewardParams.games') {{vm.getGameTextbyId(v) | translate}}
                //input.form-control(type='checkbox', ng-model='vm.selectedgames[v]',ng-checked=true)
        .label-checkbox(ng-if="vm.platformRewardPageName!=='showReward'", style='max-height:300px;overflow-y:auto')
            label(ng-repeat='(i,v) in vm.allGames') {{v.name|translate}} ({{v.type|translate}}) ({{v.status|translate}})
                input(type='checkbox', ng-model='vm.selectedgames[v.name]',ng-checked='vm.checkGameChecked(v)', ng-change='vm.processGameArray(vm.selectedgames[v.name],v)')
                .clearfix

    .full-width-input-block
        label {{vm.showRewardTypeData.params.params.rewardPercentage.des | translate}}
        span.percentage
            input.form-control(type='number', min='0', percentage, style="width:calc(45% - 20px)", ng-model='vm.rewardParams.rewardPercentage', ng-disabled='vm.platformRewardShowEdit()', required)
        label {{vm.showRewardTypeData.params.params.spendingPercentage.des | translate}}
        span.percentage
            input.form-control(type='number', min='0', percentage, style="width:calc(45% - 20px)", ng-model='vm.rewardParams.spendingPercentage', ng-disabled='vm.platformRewardShowEdit()', required)
