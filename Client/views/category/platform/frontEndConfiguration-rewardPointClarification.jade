div(style="background: #d3d3d34d; padding: 10px; margin: 10px; position:relative;")
    div(style="display: inline;")
        label {{'Setting For Reward Point Clarification' | translate}}
        br
        label.text-danger {{'Note: only allow to add, delete, move, double click to edit' | translate}}
    btn.btn.btn-success(style="position: absolute; right: 20px; top: 50%; transform: translateY(-50%);", ng-click="vm.addNewRewardPointClarification(true)")
        span.fa.fa-pencil-square-o {{"ADD" | translate}}
div.col-md-4.fronendConfigDiv(style="height: 60vh; min-height: 500px;")
    span(style='font-weight: bold;') {{'PC' | translate}}
    div.fronendConfigScrollDiv
        ul.connected-sortable
            li(ng-repeat="item in vm.frontEndRewardPointClarificationData", ng-if="item.device == 1", ng-dblclick="vm.editRewardPointClarification(item._id)")
                div(style="padding: 0.5em; background-color: white; border-radius: 4px; margin: 1em 0; border: 1px solid rgb(190,190,190); text-align: center; position: relative;")
                    span(style="vertical-align: -webkit-baseline-middle;") {{item.title}}
                    div(style="display: inline-block; position: absolute; top: 50%; right: 0; transform: translateY(-50%); z-index: 100;")
                        button.btn.btn-danger.btn-delete(ng-click="vm.deleteFrontEndSetting(item._id, vm.frontEndRewardPointClarificationData)")
                            span.fa.fa-trash-o
