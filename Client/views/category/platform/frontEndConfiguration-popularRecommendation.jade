div(style="background: #d3d3d34d; padding: 10px; margin-top: 10px; margin-bottom: 30px; position:relative;")
    div(style="display: inline;")
        label {{'Setting For First Page' | translate}}
        br
        label.text-danger {{'Note: only allow to add, delete, move, double click to edit' | translate}}
    btn.btn.btn-success(style="position: absolute; right: 20px; top: 50%; transform: translateY(-50%);", ng-click="vm.initPopularRecommendationSetting()")
        span.fa.fa-pencil-square-o {{"ADD" | translate}}
div.text-right
    button.btn-danger.btn.btn-space(ng-click="vm.frontEndDeletedList=[]; vm.getPopularRecommendationSettingDevice(vm.popularRecommendationSettingDevice);") {{'CANCEL' | translate}}
    button#testSave.btn-primary.btn.btn-space(ng-click="vm.updatePopularRecommendationSetting()") {{'SAVE' | translate}}
div.col-md-4.fronendConfigDiv
    span(style='font-weight: bold;') {{'Navigation_Bar' | translate}}
    ul.connected-sortable.droppable-area1
        li.draggable-item(ng-repeat="one in vm.frontEndPopularRecommendationData", ng-if="one.category == 1", id="{{one._id}}")
            div.detailDivLeft
                span.detailDivSpan {{ one.displayTitle }}
                <br/>
                span {{ one.onClickAction$ | translate}}
                <br/>
                span {{ one.displayRoute$ }}
            div.detailDivRight
                .tab-btngroup
                    button.btn.btn-success(style="width: 90px;" ng-if="one.isVisible" ng-click="one.isVisible = false") on
                    button.btn.btn-danger(style="width: 90px;" ng-if="!one.isVisible", ng-click="one.isVisible = true") off
                .tab-btngroup
                    button.btn.btn-primary.btn-delete(ng-click="vm.editPopularRecommendationSetting(one._id)")
                        span.fa.fa-pencil
                    button.btn.btn-danger.btn-delete(id="{{one._id}}")
                        span.fa.fa-trash-o

