div(style="background: #d3d3d34d; padding: 10px; margin: 10px; position:relative;")
    div(style="display: inline;")
        label {{'Setting For Popular Recommendation' | translate}}
        br
        label.text-danger {{'Note: only allow to add, delete, move, double click to edit' | translate}}
    btn.btn.btn-success(style="position: absolute; right: 20px; top: 50%; transform: translateY(-50%);", ng-click="vm.addNewPopularRecommendationSetting(true)")
        span.fa.fa-pencil-square-o {{"ADD" | translate}}
div.col-md-4.fronendConfigDiv
    span(style='font-weight: bold;') {{'First_Page_Popular_Recommendation' | translate}}
    ul.connected-sortable.droppable-area1
        li.draggable-item(ng-repeat="one in vm.frontEndPopularRecommendationData1", ng-if="one.category == 1", ng-dblclick="vm.editPopularRecommendationSetting(one._id)", id="{{one._id}}")
            img(ng-src="{{one.pc.imageUrl}}" width="100%" height="80px")
            .tab-btngroup
                button.btn.btn-primary(ng-if="one.isVisible" ng-click="one.isVisible = false") on
                button.btn.btn-success(ng-if="!one.isVisible", ng-click="one.isVisible = true") off
                button.btn.btn-danger.btn-delete(id="{{one._id}}")
                //(ng-click="vm.deleteFrontEndSetting(one._id, vm.frontEndPopularRecommendationData)")
                    span.fa.fa-trash-o

