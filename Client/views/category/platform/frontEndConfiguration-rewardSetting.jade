div(style="background: #d3d3d34d; padding: 10px; margin: 10px; position:relative;")
    div
        label {{'REWARD_EVENT' | translate}}
        br
        label.text-danger {{'Note: only allow to add, delete, move, double click to edit' | translate}}
    btn.btn.btn-success(style="position: absolute; right: 20px; top: 50%; transform: translateY(-50%);" ng-click="vm.addNewRewardSetting(true)")
        span.fa.fa-pencil-square-o {{"ADD" | translate}}

div(style="margin: 10px; padding: 10px;")
    label {{'Add category' | translate}}:
    input.form-control.btn-space(style="width:40%; display:inline-block", type="text", ng-model="vm.newRewardCategory" )
    button.btn.btn-primary(ng-click ="vm.addRewardCategory(vm.newRewardCategory)") {{'SUBMIT' | translate}}
div(style="margin: 10px; padding: 10px; display:inline-block; width: 100%;")
    label {{"Show category"|translate}}:
    div.inline-block(style="width: 40%;")
        select.spicker.form-control.inline-block(multiple, data-actions-box='true', bsp, ng-model="vm.displayCategory")
            //option(value='all' ng-init='$last && vm.refreshSPicker()') {{'PRESET (ALL)' | translate}}
            option(ng-init='$last && vm.refreshSPicker()' ng-repeat='item in vm.allFrontEndRewardCategory', value='{{item._id}}') {{item.categoryName}}
    button.btn.btn-primary(style="margin-left: 5px;", ng-click ="vm.filterDisplayCategory(vm.displayCategory)") {{'SUBMIT' | translate}}

div.col-xs-12.row(style="padding-right: 0;")
    div.col-md-4(ng-repeat="data in vm.frontEndRewardCategory" style="height: 60vh; min-height: 500px; box-sizing: border-box; margin-top: 2em; text-align: center;")
        div.eventSettingDiv.col-md-12.text-center(style="height:100%;")
            span(style='font-weight: bold;') {{data.categoryName}}
            p.text-danger 正式站、测试站点击可切换
                button.btn.btn-danger.btn-delete(style="margin-left: 5px;", ng-click="vm.deleteRewardCategory(data._id)")
                    span.fa.fa-trash-o
                button.btn.btn-success.btn-delete(style="margin-left: 5px;", ng-click="vm.editRewardCategory(data._id)")
                    span.fa.fa-edit
            hr
            div(style="height: calc(100% - 70px); background: #d3d3d34d; overflow: auto;" id="{{data._id}}")
                ul.connected-sortable.droppable-area(style="min-height: 90%;")
                    li.draggable-item(ng-repeat="event in vm.rewardSettingData" ng-if="event.categoryObjId == data._id" ng-dblclick="vm.editRewardSetting(event._id)" id="{{event._id}}" style="text-align: left; background: white; margin: 0.5em; width: 95%; height: 40px;")
                        span {{event.title}}
                        .tab-btngroup
                            button.btn.btn-primary(ng-if="event.isVisible" ng-click="event.isVisible = false") on
                            button.btn.btn-success(ng-if="!event.isVisible", ng-click="event.isVisible = true") off
                            button.btn.btn-danger.btn-delete(ng-click="vm.deleteRewardSetting(event._id)")
                                span.fa.fa-trash-o

div.text-right
    button.btn-danger.btn.btn-space(style="margin-top: 15px;" ng-click="vm.rewardCategoryDeletedList=[];vm.rewardDeletedList=[];vm.loadRewardCategory(vm.filterFrontEndSettingPlatform); vm.loadRewardSetting(vm.filterFrontEndSettingPlatform);") {{'CANCEL' | translate}}
    button#rewardSettingSaveBtn.btn-primary.btn.btn-space(style="margin-top: 15px;" ng-click="vm.updateRewardSetting()") {{'SAVE' | translate}}

#rewardCategoryModal.modal.fade(tabindex='-1', role='dialog', data-backdrop='static', keyboard=false,aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
        .modal-content
            .modal-header
                a.fa.fa-times.close(type='button', data-dismiss='modal')
                h4.modal-title {{"Edit Reward Category" | translate}}
            .modal-body
                .panel.panel-primary
                    .panel-body.margin-all-5
                        .col-md-12
                            .full-width-input-block
                                label(style="width: 30%;") {{"CATEGORY NAME"|translate}}
                                div.inline-block(style="width: 70%;")
                                    input.form-control(ng-model="vm.newRewardCategoryData.categoryName")

            .modal-footer
                button.btn-sm.margin-right-5.btn.btn-primary.col-md-2(ng-click='vm.updateRewardCategory(vm.newRewardCategoryData)') {{"CONFIRM" | translate}}
                button.btn-sm.margin-right-5.btn.btn-warning.col-md-2(data-dismiss='modal') {{"CANCEL" | translate}}