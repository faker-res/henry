.full-width-input-block
    label(ng-if="!vm.isPartnerForSkinManagement") {{"SKIN_DEVICE"|translate}}
    label(ng-if="vm.isPartnerForSkinManagement") {{"PARTNER_SKIN_DEVICE"|translate}}
    div.inline-block
        select.form-control(ng-model='vm.newFrontEndSkinSetting.device' ng-change='vm.skinSettingShowMessage=""')
            option(ng-repeat='(i,v) in frontEndSettingDevice', value='{{i}}') {{v}}

.full-width-input-block
    label {{"SKIN_NAME"|translate}}
    div.inline-block
        input.form-control(type="text" ng-model="vm.newFrontEndSkinSetting.name")

.full-width-input-block
    label {{"SKIN_URL"|translate}}
    div.inline-block
        input.form-control(type="text" ng-model="vm.newFrontEndSkinSetting.url")

.full-width-input-block
    label
    div.inline-block
        button.btn.btn-success(ng-if="!vm.isPartnerForSkinManagement" ng-click='vm.saveFrontEndSkinSetting()') {{"ADD_SKIN" | translate}}
        button.btn.btn-success(ng-if="vm.isPartnerForSkinManagement" ng-click='vm.saveFrontEndSkinSetting(vm.isPartnerForSkinManagement, vm.filterFrontEndSettingSubPlatformId)') {{"ADD_SKIN" | translate}}
        span(style='display:inline-block;padding-left: 5px;') {{vm.skinSettingShowMessage | translate}}
div
    br

.full-width-input-block
    label {{"DELETE_SKIN_SELECTION"|translate}}
    div.inline-block
        select.form-control(ng-model='vm.selectedFrontEndSkin' style="width:80%;display:inline-block" ng-change='vm.skinSettingShowMessage=""')
            option(ng-repeat='(i,v) in vm.frontEndSkinSetting', value='{{v._id}}') {{v.name$}}
        div(style="padding-left: 22px;display:inline-block")
            button.btn.btn-warning(ng-if="!vm.isPartnerForSkinManagement" ng-click='vm.removeFrontEndSkinSetting(vm.selectedFrontEndSkin)') {{"DELETE_SELECTED_SKIN_BUTTON" | translate}}
            button.btn.btn-warning(ng-if="vm.isPartnerForSkinManagement" ng-click='vm.removeFrontEndSkinSetting(vm.selectedFrontEndSkin, vm.filterFrontEndSettingSubPlatformId, vm.isPartnerForSkinManagement)') {{"DELETE_SELECTED_PARTNER_SKIN_BUTTON" | translate}}
