form(name="form_edit_player", novalidate)
    .row.margin-left-5.margin-right-5
        .form-group.col-md-6
            label.control-label *{{"PLAYER_NAME" | translate}}
            input.form-control(type="text", placeholder='{{"PLAYER_NAME" | translate}}', ng-model="playerBeingEdited.name", ng-change='checkPlayerNameValidity(playerBeingEdited.name,form_edit_player,"edit")', required, disabled)
            span.help-block(style='color: #b94a48', ng-show='duplicateNameFound()') {{'PLAYER_NAME' | translate}}&nbsp;{{'existed already' | translate}}
        //.form-group.col-md-6
        //   label.control-label {{"EMAIL" | translate}}
        //   input.form-control(type="email", name="email", placeholder='{{"EMAIL" | translate}}', ng-model="vm.editPlayer.email", required)
        //   span.help-block(ng-show="form_new_player.email.$dirty && form_new_player.email.$error.email") {{"EMAIL_INVALID" | translate}}
        .form-group.col-md-6
            label.control-label {{"REAL_NAME" | translate}}
            input.form-control(type="text", placeholder='{{"REAL_NAME" | translate}}', ng-model="playerBeingEdited.realName")
    .row.margin-left-5.margin-right-5
        .form-group.col-md-6
            label.control-label {{"PLAYER_LEVEL" | translate}}
            select.form-control(type="text", ng-model="playerBeingEdited.playerLevel")
                option(ng-repeat='(i,v) in allPlayerLevel', value='{{v._id}}', ng-selected='v._id == playerBeingEdited.playerLevel') {{v.name}}
        .form-group.col-md-6
            label.control-label {{"PARTNER" | translate}}
            input.partnerValue.form-control(style='width:calc(100% - 20px);display: inline-block', ng-model='playerBeingEdited.partnerName', ng-change="changePartner()")
            i.partnerValidFalse.margin-left-5.fa.fa-times.text-danger(style='width:10px;display:none')
            i.partnerValidTrue.margin-left-5.fa.fa-check.text-success(style='width:10px;display:none')
        //.form-group.col-md-6
            label.control-label {{"PARTNER" | translate}}
            label#partnerInEditPlayer.form-control(ng-click='showPartnerTable()') {{partnerObjs[playerBeingEdited.partner].partnerName}}
                //select.form-control(name="partner", ng-model="playerBeingEdited.partner")
                    option(value='{{null}}', ng-selected='null==playerBeingEdited.partner') {{'NULL' | translate}}
                    option(ng-repeat='(i,v) in allPartner', value='{{i}}', ng-selected='i==playerBeingEdited.partner') {{v.partnerName}}
    .row.margin-left-5.margin-right-5
        .form-group.col-md-6
            label.control-label {{"REFERRAL" | translate}}
            input.referralValue.form-control(style='width:calc(100% - 20px);display: inline-block', ng-model='playerBeingEdited.referralName', ng-change="changeReferral()")
            i.referralValidFalse.margin-left-5.fa.fa-times.text-danger(style='width:10px;display:none')
            i.referralValidTrue.margin-left-5.fa.fa-check.text-success(style='width:10px;display:none')
    .row.margin-left-5.margin-right-5
        .form-group.col-md-12
            label.control-label {{"ICON" | translate}}
            img.margin-left-5(ng-if='playerBeingEdited.photoUrl', src="{{playerBeingEdited.photoUrl}}", style='width:40px;height:40px;')
            br
            input.form-control(type="text", placeholder='{{"URL" | translate}}', ng-model="playerBeingEdited.photoUrl", style='width:100%;display:inline-block')
    .row.margin-left-5.margin-right-5
        .form-group.col-md-6
            label.control-label {{"Bankcard Group"|translate}}
            select.form-control(ng-model='playerBeingEdited.bankCardGroup')
                option(ng-repeat='(i,v) in platformBankCardGroupList', value='{{v._id}}', ng-selected='playerBeingEdited.bankCardGroup==v._id') {{v.displayName}}
        .form-group.col-md-6
            label.control-label {{"MERCHANT_GROUP"|translate}}
            select.form-control(ng-model='playerBeingEdited.merchantGroup')
                option(ng-repeat='(i,v) in platformMerchantGroupList', value='{{v._id}}', ng-selected='playerBeingEdited.merchantGroup==v._id') {{v.displayName}}
        .form-group.col-md-6
            label.control-label {{"alipayGroup"|translate}}
            select.form-control(ng-model='playerBeingEdited.alipayGroup')
                option(ng-repeat='(i,v) in platformAlipayGroupList', value='{{v._id}}', ng-selected='playerBeingEdited.alipayGroup==v._id') {{v.displayName}}
        .form-group.col-md-6
            label.control-label {{"WechatPay Group"|translate}}
            select.form-control(ng-model='playerBeingEdited.wechatPayGroup')
                option(ng-repeat='(i,v) in platformWechatPayGroupList', value='{{v._id}}', ng-selected='playerBeingEdited.wechatPayGroup==v._id') {{v.displayName}}
        .form-group.col-md-6
            label.control-label {{"TrustLevel"|translate}}
            select.form-control(ng-model='playerBeingEdited.trustLevel')
                option(ng-repeat='(i,v) in allPlayerTrustLvl', value='{{v.value}}', ng-selected='playerBeingEdited.trustLevel==v.value') {{v.name | translate}}
    .row.margin-left-5.margin-right-5
        .form-group.col-md-12
            label.control-label {{"RECEIVE_SMS" | translate}}
                input.pull-left.margin-right-5(type="checkbox", ng-model="playerBeingEdited.receiveSMS")
            p
            label.control-label.margin-right-5 {{"MANUAL_TOP_UP" | translate}}
                input.pull-left.margin-right-5(type="checkbox", ng-model="playerBeingEdited.smsSetting.manualTopup")
            label.control-label.margin-right-5 {{"APPLY_BONUS" | translate}}
                input.pull-left.margin-right-5(type="checkbox", ng-model="playerBeingEdited.smsSetting.applyBonus")
            label.control-label.margin-right-5 {{"CANCEL_BONUS" | translate}}
                input.pull-left.margin-right-5(type="checkbox", ng-model="playerBeingEdited.smsSetting.cancelBonus")
            label.control-label.margin-right-5 {{"APPLY_REWARD" | translate}}
                input.pull-left.margin-right-5(type="checkbox", ng-model="playerBeingEdited.smsSetting.applyReward")
            label.control-label.margin-right-5 {{"CONSUMPTION_RETURN" | translate}}
                input.pull-left.margin-right-5(type="checkbox", ng-model="playerBeingEdited.smsSetting.consumptionReturn")
            label.control-label.margin-right-5 {{"UPDATE_PAYMENT_INFO" | translate}}
                input.pull-left.margin-right-5(type="checkbox", ng-model="playerBeingEdited.smsSetting.updatePaymentInfo")
            label.control-label.margin-right-5 {{"UPDATE_PASSWORD" | translate}}
                input.pull-left.margin-right-5(type="checkbox", ng-model="playerBeingEdited.smsSetting.updatePassword")

