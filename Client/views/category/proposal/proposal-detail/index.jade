html
    //head
        title AngularJS-FlowChart
    body(ng-app='app', ng-controller='AppCtrl', mouse-capture='', ng-keydown='keyDown($event)', ng-keyup='keyUp($event)')
        div(style='width: 100%; overflow: hidden;')
            //
              <div style="width: 600px; float: left;">
              <textarea
              style="width: 100%; height: 100%;"
              chart-json-edit
              view-model="chartViewModel"
              >
              </textarea>
              </div>
            div(style='margin-left: 200px;')
                button(ng-click='addNewNode()', title='Add a new node to the chart')
                    | Add Node
                button(ng-click='addNewInputConnector()', ng-disabled='chartViewModel.getSelectedNodes().length == 0', title='Add a new input connector to the selected node')
                    | Add Input Connector
                button(ng-click='addNewOutputConnector()', ng-disabled='chartViewModel.getSelectedNodes().length == 0', title='Add a new output connector to the selected node')
                    | Add Output Connector
                button(ng-click='deleteSelected()', ng-disabled='chartViewModel.getSelectedNodes().length == 0 && chartViewModel.getSelectedConnections().length == 0', title='Delete selected nodes and connections')
                    | Delete Selected
                //This custom element defines the flowchart.
                flow-chart(style='margin: 5px; width: 680px; height: 580px;', chart='chartViewModel')
                button(ng-click='saveProcess()')  Save Process
                button(ng-click='resetProcess()')  Reset Process
        link(rel='stylesheet', type='text/css', href='app.css')
        // Library code.
        //script(src='lib/jquery-2.0.2.js', type='text/javascript')
        //script(src='lib/angular.js', type='text/javascript')
        // Flowchart code.
        script(src='js/lib/proposaltools/debug.js', type='text/javascript')
        script(src='js/lib/proposaltools/flowchart/svg_class.js', type='text/javascript')
        script(src='js/lib/proposaltools/flowchart/mouse_capture_service.js', type='text/javascript')
        script(src='js/lib/proposaltools/flowchart/dragging_service.js', type='text/javascript')
        script(src='js/lib/proposaltools/flowchart/flowchart_viewmodel.js', type='text/javascript')
        script(src='js/lib/proposaltools/flowchart/flowchart_directive.js', type='text/javascript')
        // App code.
        script(src='app.js', type='text/javascript')
