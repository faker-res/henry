                                                input.form-control(type="checkbox", value="{{workloadReportTable.messageId}}",ng-model="workloadReportTable.isChecked", ng-change="vm.gatherCheckedRecord(workloadReportTable.isChecked,workloadReportTable.messageId,workloadReportTable.appealReason);workloadReportTable.appealReasonFreeze=workloadReportTable.isChecked")
