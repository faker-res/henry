                    .panel-body.common-right-panel-body
                        div(ng-show="vm.inspectionReportTab == 'workloadReport'")
                            #workloadProgressDiv.tab-pane.fade.in.active
                                .inlineBlk(ng-show="checkViewPermission('QualityInspection', 'Evaluation', 'queryByProposalStatus')")
                                    label {{'QC_ACCOUNT' | translate}}
                                    select.form-control#selectQCAccount(ng-model="vm.qcAccount" ng-init='vm.qcAccount="all"')
                                        option(value='all' selected="true") {{'ALL' | translate}}
                                        option(ng-repeat='(i,v) in vm.qcAccount', value='{{v}}') {{i|translate}}
                                .inlineBlk(ng-show="checkViewPermission('QualityInspection', 'Report', 'queryByProposalDate')")
                                    label {{'START_DATE' | translate}}
                                    #reportConversationStartDatetimePicker.input-append.form-control
                                        input(style='width:calc(100% - 15px)',data-format="yyyy/MM/dd HH:mm:ss PP", type='text')
                                        span.add-on
                                            i.fa.fa-calendar(data-time-icon='fa fa-clock-o', data-date-icon='fa fa-calendar')
                                .inlineBlk(ng-show="checkViewPermission('QualityInspection', 'Report', 'queryByProposalDate')")
                                    label {{'END_DATE' | translate}}
                                    br
                                    #reportConversationEndDatetimePicker.input-append.form-control
                                        input(style='width:calc(100% - 15px)', data-format='yyyy/MM/dd HH:mm:ss PP', type='text')
                                        span.add-on
                                            i.fa.fa-calendar(data-time-icon='fa fa-clock-o', data-date-icon='fa fa-calendar')
                                .inlineBlk.pull-right(style='width:100px;padding-top:20px')
                                    button.common-button.btn.btn-primary(ng-click='vm.getWorkloadReport()') {{'SEARCH' | translate}}

                                .row(style='background-color:#337ab7;margin: 5px 2px 0px 2px;padding: 10px 2px; border-bottom: 1px solid #111;')
                                    div.col-md-1(style='display:inline-block;padding-left:5px;') {{"QC_ACCOUNT" | translate}}
                                    div.col-md-1(style='display:inline-block;padding-left:5px;') {{"COMPLETED_UNREAD_QUANTITY" | translate}}
                                    div.col-md-1(style='display:inline-block;padding-left:5px;') {{"COMPLETED_READ_QUANTITY" | translate}}
                                    div.col-md-1(style='display:inline-block;padding-left:5px;') {{"COMPLETED_QUANTITY" | translate}}
