				i.fa.fa-minus-square.btn-success.margin-right-5
				| {{"DETACH_GROUP" | translate}}
		li(ng-if='vm.page!=="policy"')
			a(ng-disabled="vm.totalCommonTableChecked!==1", ng-class="{true: 'cbDisabled'}[vm.totalCommonTableChecked!==1]", ng-click='vm.showAttachPolicyPage(true);', data-toggle='modal', data-target='#modalAction')
