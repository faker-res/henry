			a(ng-disabled="vm.totalCommonTableChecked!==1", ng-class="{true: 'cbDisabled'}[vm.totalCommonTableChecked!==1]", ng-click='vm.showAttachGroupPage(true);', data-toggle='modal', data-target='#modalAction')
				i.fa.fa-plus-square.btn-success.margin-right-5
