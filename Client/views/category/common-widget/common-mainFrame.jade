div
	include ./common-table

#modalAction.modal.fade(tabindex='-1', role='dialog', data-backdrop='static', keyboard=false,aria-labelledby='myModalLabel', aria-hidden='true')
	.modal-dialog(style='width:80%;')
		.modal-content
			.modal-body
				include ./common-action
				button.btn.btn-default(ng-click="vm.getAllMainData(vm.drawTable);", type='button', data-dismiss='modal') {{"GO_BACK" | translate}}

#modalCreate.modal.fade(tabindex='-1', role='dialog', data-backdrop='static', keyboard=false,aria-labelledby='myModalLabel', aria-hidden='true')
	.modal-dialog(style='width:80%;')
		.modal-content
			.modal-body
				div(ng-if='vm.page=="admin"')
					include ../mainPage/admin-create
				div(ng-if='vm.page=="group"')
					include ../group/group-create
				div(ng-if='vm.page=="policy"')
					include ../policy/policy-create
				button.btn.btn-default(type='button', data-dismiss='modal') {{"GO_BACK" | translate}}
#modalEdit.modal.fade(tabindex='-1', role='dialog', data-backdrop='static', keyboard=false,aria-labelledby='myModalLabel', aria-hidden='true')
	.modal-dialog(style='width:80%;')
		.modal-content
			.modal-body
				div(ng-if='vm.page=="admin"')
					include ../mainPage/admin-update
				div(ng-if='vm.page=="group"')
					include ../group/group-update
				div(ng-if='vm.page=="policy"')
					include ../policy/policy-update
				button.btn.btn-default(type='button', ng-click="vm.getAllMainData(vm.drawTable);", data-dismiss='modal') {{"GO_BACK" | translate}}
