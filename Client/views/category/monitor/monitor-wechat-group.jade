div
    #wechatGroupControlMonitor.block-query.col-md-12.well
        div(style='width:210px')
            label.control-label  {{'PRODUCT' | translate}}
            select.form-control.spicker(ng-model='vm.wechatGroupControlMonitorQuery.product', ng-change='vm.getWechatSessionDeviceNickName(vm.wechatGroupControlMonitorQuery.product)', ng-options="a._id as a.name  for a in vm.adminPlatformName", style='max-width:200px', multiple, bsp, data-actions-box='true')
        div(style='width:155px')
            label.control-label  {{'Device Name' | translate}}
            select.form-control.spicker(ng-model='vm.wechatGroupControlMonitorQuery.deviceNickName', ng-change='vm.getWechatSessionCsOfficer(vm.wechatGroupControlMonitorQuery.product, vm.wechatGroupControlMonitorQuery.deviceNickName)', ng-options="a  for a in vm.wechatSessionNickName", style='max-width:200px', multiple, bsp, data-actions-box='true')
        div(style='width:155px')
            label.control-label  {{'Login Account' | translate}}
            select.form-control.spicker(ng-model='vm.wechatGroupControlMonitorQuery.csOfficer', ng-options="a._id as a.adminName  for a in vm.wechatSessionCsOfficer", style='max-width:200px', multiple, bsp, data-actions-box='true')
        div
            label &nbsp;
            button.btn.btn-warning(ng-click='vm.resetWechatGroupControlMonitor()') {{'Reset' | translate}}
        div
            label &nbsp;
            button.btn.btn-success(ng-click='vm.searchWechatMonitorRecord(true)') {{'SEARCH' | translate}}
            span#wechatGroupMonitorTableSpin.collapse
                i.fa.fa-spinner.fa-spin
    .clearfix
        .proposalMessage
            text {{'LAST_REFRESH_TIME' | translate}}  : {{vm.lastWechatRefresh}}
            label.text-danger.newProposalAlert
            a(ng-click='vm.searchWechatMonitorRecord()')
                .fa.fa-refrestimeLeftRefreshOperationh
            .pull-right
                label.inlineBlk.pull-right {{'Auto Refresh' | translate}}
                    input#autoRefreshWechatFlag.margin-left-5(type='checkbox', checked)
                .inlineBlk.hidden
                    text {{"Time left until next refresh" | translate}} :&nbsp;
                    text#timeLeftRefreshOperation
                    text s
        label {{"Total" | translate}} {{vm.wechatGroupControlMonitorQuery.totalCount}} {{"records" | translate}}
        table#wechatGroupMonitorTable.common-table.display(style="min-width:100%; overflow: scroll")
        #wechatGroupMonitorTablePage

#modalWCGroupControlSessionHistory.modal.fade(tabindex='-1', role='dialog', data-backdrop='static', keyboard=false,aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog(style='width:80%;')
        .modal-content
            .modal-header
                a.fa.fa-times.close(type='button', data-dismiss='modal')
                h4.modal-title {{"7 Day(s) History" | translate}}
            .modal-body
                #wcGroupControlSessionHistoryQuery.well
                    .inlineBlk
                        label {{"PRODUCT" | translate}} &nbsp;
                        input.form-control(ng-model='vm.wcGroupControlSessionHistory.platformName' disabled)
                    .inlineBlk
                        label {{"Device Name" | translate}} &nbsp;
                        input.form-control(ng-model='vm.wcGroupControlSessionHistory.deviceNickName' disabled)
                    .inlineBlk
                        div(style='width:155px')
                            label {{"Login Account" | translate}}
                            select.form-control.spicker(ng-model='vm.wcGroupControlSessionHistory.csOfficer', ng-options="a._id as a.adminName  for a in vm.wechatGroupControlHistoryAdminList", style='max-width:200px', multiple, bsp, data-actions-box='true')
                    .inlineBlk
                        label {{"Start Connection Time" | translate}}
                        .startTime
                    .inlineBlk
                        label {{"Offline Time" | translate}}
                        .endTime
                    button.btn.btn-primary.common-button(ng-click='vm.getWCGroupControlSessionHistory(true)', style='vertical-align: bottom') {{"SEARCH" | translate}}
                label {{"Total" | translate}} {{vm.wcGroupControlSessionHistory.totalCount}} {{"records" | translate}}
                table#wcGroupControlSessionHistoryTable.common-table.display(style='min-width:100%; overflow: scroll')
                #wcGroupControlSessionHistoryTablePage.height30