div
    #wechatGroupControlQuery.block-query.col-md-12.well
        div(style='width:125px')
            label.control-label  {{'DEPARTMENT' | translate}}
            select.form-control(ng-model='vm.wechatGroupControlQuery.department')
        div(style='width:125px')
            label.control-label  {{'Device Name' | translate}}
            select.form-control(ng-model='vm.wechatGroupControlQuery.deviceName')
        div(style='width:125px')
            label.control-label  {{'Login Account' | translate}}
            select.form-control(ng-model='vm.wechatGroupControlQuery.loginAccount')

        div
            label &nbsp;
            button.btn.btn-warning(ng-click='vm.resetWechatMonitorQuery()') {{'Reset' | translate}}
        div
            label &nbsp;
            //button.btn.btn-success(ng-click='vm.getWechatMonitorRecord(true)') {{'SEARCH' | translate}}
            button.btn.btn-success(ng-click='') {{'SEARCH' | translate}}
            span#wechatGroupMonitorTableSpin.collapse
                i.fa.fa-spinner.fa-spin
    .clearfix
        .proposalMessage
            text {{'LAST_REFRESH_TIME' | translate}}  : {{vm.lastTopUpRefresh}}
            label.text-danger.newProposalAlert
            a(ng-click='vm.getWechatMonitorRecord()')
                .fa.fa-refresh
            .pull-right
                label.inlineBlk.pull-right {{'Auto Refresh' | translate}}
                    input#autoRefreshProposalFlag.margin-left-5(type='checkbox', checked)
                .inlineBlk.hidden
                    text {{"Time left until next refresh" | translate}} :&nbsp;
                    text#timeLeftRefreshOperation
                    text s
        label {{"Total" | translate}} {{vm.wechatGroupControlQuery.totalCount}} {{"records" | translate}}
        table#wechatGroupMonitorTable.common-table.display(style="min-width:100%; overflow: scroll")
        #wechatGroupMonitorTablePage


